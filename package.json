{
  "name": "backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "tsc-watch -p tsconfig.build.json --onSuccess \"node dist/main.js\"",
    "start:debug": "tsc-watch -p tsconfig.build.json --onSuccess \"node --inspect-brk dist/main.js\"",
    "start:front": "npx http-server ./front-end/ -o",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:coverage:overview": "npm run test:coverage && npx http-server ./coverage/lcov-report -o",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:connect:redis": "npx ts-node src/redis/redis.ts",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "7.0.8",
    "@nestjs/core": "7.0.8",
    "@nestjs/jwt": "7.1.0",
    "@nestjs/microservices": "7.0.13",
    "@nestjs/platform-express": "7.0.8",
    "@nestjs/swagger": "4.6.1",
    "@nestjs/typeorm": "7.1.4",
    "@types/lodash": "4.14.150",
    "class-transformer": "0.3.1",
    "class-validator": "0.12.2",
    "loadsh": "0.0.4",
    "mysql": "2.18.1",
    "nestjs-redis": "1.2.8",
    "redis": "3.0.2",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "6.5.5",
    "typeorm": "0.2.28"
  },
  "devDependencies": {
    "@nestjs/cli": "7.1.2",
    "@nestjs/schematics": "7.1.2",
    "@nestjs/testing": "7.0.9",
    "@types/express": "4.17.8",
    "@types/ioredis": "4.17.4",
    "@types/jest": "26.0.14",
    "@types/node": "13.13.0",
    "@types/redis": "2.8.21",
    "@types/supertest": "2.0.8",
    "@typescript-eslint/eslint-plugin": "2.28.0",
    "@typescript-eslint/parser": "2.28.0",
    "eslint": "7.10.0",
    "eslint-config-prettier": "6.10.1",
    "eslint-plugin-import": "2.20.2",
    "husky": "4.2.5",
    "jest": "25.3.0",
    "jsonwebtoken": "8.5.1",
    "prettier": "2.1.2",
    "supertest": "4.0.2",
    "swagger-ui-express": "4.1.4",
    "ts-jest": "26.4.1",
    "ts-loader": "6.2.2",
    "ts-node": "9.0.0",
    "tsc-watch": "4.2.3",
    "tsconfig-paths": "3.9.0",
    "typescript": "3.8.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "husky": {
    "hooks": {
      "post-merge": "npm run build && npx pm2 restart all && node scripts/restart-service.js"
    }
  }
}
